{{#if addNewAnnouncement}}
  <h2>New Announcement</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title class="form-control" id="title"}}
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message class="form-control" id="message"}}
      </div>

      <btn btn-default {{action 'saveAnnouncement'}}>Save</btn>
    </form>
  </div>
{{else}}
  <btn btn-default {{action 'announcementFormShow'}}>Add Announcement</btn>
{{/if}}
