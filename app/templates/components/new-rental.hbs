{{#if addNewRental}}
  <h2>New Rental</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="owner">Owner</label>
        {{input value=owner id="owner"}}
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type"}}
      </div>

      <div class="form-group">
        <label for="city">City</label>
        {{input value=city id="city"}}
      </div>

      <div class="form-group">
        <label for="bedrooms">Number of Bedrooms</label>
        {{input value=bedrooms id="bedrooms"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <btn btn-default {{action 'saveRental1'}}>Save</btn>
    </form>
  </div>
{{else}}
  <btn btn-default {{action 'rentalFormShow'}}>Add Rental</btn>
{{/if}}
